<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_openeducat_admission" model="ir.module.category">
            <field name="name">OpenEduCat Admission</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="sequence">16</field>
        </record>

        <record id="group_op_admission_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_openeducat_admission"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('openeducat_core.group_op_faculty'))]"/>
        </record>

        <record id="group_op_admission_admin" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_openeducat_admission"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids"
                   eval="[(4, ref('openeducat_admission.group_op_admission_user'))]"/>
        </record>
        <record id="openeducat_core.group_op_back_office_admin" model="res.groups">
            <field name="name">Back Office Admin</field>
            <field name="category_id" ref="openeducat_core.module_category_openeducat"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids"
                   eval="[(4, ref('openeducat_admission.group_op_admission_admin')),(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>